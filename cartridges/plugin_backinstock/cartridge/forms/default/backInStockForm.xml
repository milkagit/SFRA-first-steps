<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">


		<field
			formid="phoneNumbers"
			label="label.input.phoneNumbers.backInStockForm"
			mandatory="true"
			min-length="7"
      max-length="15"
			regexp="^([+]?359)|0?(|-| )8[789]\d{1}(|-| )\d{3}(|-| )\d{3}$"
			missing-error="error.message.required.phone"
			range-error="error.message.range.phone"
			type="string"/>

</form>

